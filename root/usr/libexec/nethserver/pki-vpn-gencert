use strict;
use esmith::ConfigDB;
use Getopt::Std;

my %opts;
my $crtFile = "/etc/pki/tls/certs/NSRV.crt";
my $keyFile = "/etc/pki/tls/private/NSRV.key";
my $outputDir = "/var/lib/nethserver/certs";
my $csrOut = "";
my $crtOut = "";
my $keyOut = "";
my $pkcsOut = "";
my $commonName = "";
my $duration = "";
my $errors = 0;

sub die_help()
{
    print "
pki-vpncert: Generate NethServer OpenVPN client certfificate.

Usage:
   pki-vpncert [-h] <commonName> <optional certificate life in days>
      The certificate life is a numeric value (minimal is 7)
   -h this help
\n";
   exit 1;
}

getopts('h', \%opts);

if($opts{'h'}) { die_help() }

if ( $#ARGV < 0 ) {
   die_help();
} else {
    $commonName = $ARGV[0];
    $duration = $ARGV[1];
    $csrOut = "$outputDir/$commonName.csr";
    $keyOut = "$outputDir/$commonName.key";
    $crtOut = "$outputDir/$commonName.crt";
    $pkcsOut = "$outputDir/$commonName.p12";
}

if ( ! -r $keyFile ) {
    die("Could not read $keyFile\n");
}
if ( ! -r $crtFile ) {
    die("Could not read $crtFile\n");
}

if ( -f $crtOut ) {
    die("A certificate named $commonName already exists!\n");
}

my $configDb = esmith::ConfigDB->open_ro() || die("Could not open ConfigDB");
my %conf = $configDb->as_hash();


my $contact = $conf{OrganizationContact};
my $pki = $conf{pki};
my $certificateDuration = $duration || $pki->{CertificateDuration} || "30";

if ($certificateDuration < 7) {
    warn "WARNING: pki CertificateDuration is less than 7 days! Check configuration DB.\n";
}

my $fqdn = join('.', $conf{SystemName}{type}, $conf{DomainName}{type});
my $countryCode = substr($contact->{CountryCode} || '--', 0, 2);
my $state = substr($contact->{State} || 'SomeState', 0, 32);
my $city = substr($contact->{City} || 'SomeCity', 0, 64);
my $company = substr($contact->{Company} || 'SomeCompany', 0, 64);
my $department = substr($contact->{Department} || 'SomeDepartment', 0, 64);
my $email = substr($conf{admin}{EmailAddress} || 'admin@' . $fqdn, 0, 64);


# Generte Certificate Signing Request

open(FH, '|-', join(' ', '/usr/bin/openssl',
		    'req',
		    '-days', $certificateDuration,
		    '-utf8',
		    '-new',
       		    '-nodes',
		    '-keyout', $keyOut,
	            '-out', $csrOut
		    )
    ) || die("Could not connect to openssl: $!\n");

foreach (
    $countryCode,
    $state,
    $city,
    $company,
    $department,
    $commonName,
    $email,
    '',
    ''
) {
    print FH ($_ . "\n");
}

close(FH) or die("Can't create CSR for $commonName certificate!\n");

# Generate signed certificate
$errors += system("/usr/bin/openssl ca -notext  -in $csrOut -out $crtOut -days $certificateDuration -batch -config $outputDir/ca.cnf");

# Generate pkcs12 certificate
$errors += system("/usr/bin/openssl pkcs12 -export -in $crtOut -inkey $keyOut -certfile $crtFile -name '$commonName' -out $pkcsOut -password pass:$commonName");

my $gid = getgrnam('adm');
chown(0,$gid,$keyOut);
chmod(0640,$keyOut);

exit (1 ? $errors > 0 : 0);
